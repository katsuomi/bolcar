<%= render "application/header" %>

<div class="back-gray">
  <h2 class="search-title">シフト確認</h2>

  <%= render "schedules", schedules: @schedules, dates: @dates, type: "private" %>

  <div class="box-wrapper">
    <div>
      <div class="green-box"></div>
      <span>個人面談</span>
    </div>

    <div>
      <div class="red-box"></div>
      <span>グループ面談</span>
    </div>

    <div>
      <div class="blue-box"></div>
      <span>フォーム未回答</span>
    </div>
  </div>

  <div class="link-wrapper">
    <%= link_to "新しくシフトを登録", new_schedule_path %>
  </div>
</div>

<header>
  <h3>Bolstering Career</h3>
  <div class="menu-wrapper">
    <%= image_tag "menu.png", id: "menu-link" %>
    <% if meetings_count %>
      <span class="notification">●</span>
    <% end %>
  </div>
</header>
<% if !current_student&.name && !current_instructor&.name %>
  <div class="profile-alert">
    <%= link_to_if current_student, "プロフィールを登録してください", edit_student_registration_path do %>
    <% end %>
    <%= link_to_if current_instructor, "プロフィールを登録してください", edit_instructor_registration_path do %>
    <% end %>
  </div>
<% end %>
<div id="close-menu">
</div>
<div id="menu">
  <div class="menu-content">
    <% if current_student %>
      <%= link_to "講師を探す", instructors_path %>
      <%= link_to "予約中の面談", reservations_path %>
      <%= link_to "面談情報", meetings_path %>
      <%= link_to "マイページ", student_path(current_student) %>
      <%= link_to "お問い合わせ", new_contact_path %>
      <%= link_to "ログアウト", destroy_student_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %>
    <% end %>
    <% if current_instructor %>
      <%= link_to "シフト登録", new_schedule_path %>
      <%= link_to "シフト確認", schedules_path %>
      <%= link_to "面談情報", meetings_path %>
      <%= link_to "マイページ", instructor_path(current_instructor) %>
      <%= link_to "お問い合わせ", new_contact_path %>
      <%= link_to "ログアウト", destroy_instructor_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} %>
    <% end %>
  </div>
</div>
